html
    head
        title= "List"
        link(rel="stylesheet", href="/css/bootstrap.min.css")
        script(src="/js/bootstrap.bundle.min.js")
        script(src="/js/updateTime.js")
    body
        div(class="container", style="margin-top:10px;")
            div(class="row")
                div(class="col-12", style="text-align: center")
                    a(href="/create", style="font-size: 14pt;font-weight: bold",)= "Create"
                div(class="col-1")
                div(class="col-10")
                    table(class="table table-striped table-hover")
                        thead
                            tr
                                th= "Name"
                                th= "Contract"
                                th= "date"
                                th= "to launch"
                                th= "description"
                                th= "links"
                                th= "operation"
                        tbody
                            each val, key in data
                                if new Date(val.date) - new Date() < 0
                                    tr(class="table-danger", style="color: gray")
                                        td= val.name
                                        td= val.contract
                                        td= new Date(val.date)
                                        td= countDays(new Date(val.date) - new Date())
                                        td= val.description
                                        td
                                            a(href="https://poocoin.app/tokens/"+val.contract, target="_blank", style="margin-right: 5px;")= "PooCoin"
                                            br
                                            a(href="https://bscscan.com/token/"+val.contract, target="_blank", style="margin-right: 5px;")= "BSCScan"
                                        td
                                            button(class="btn btn-danger delete-btn", id=val._id)= "Delete"
                                else if new Date(val.date) - new Date() <= 86400000
                                    tr(class="table-warning", style="color: green;font-weight: bold")
                                        td= val.name
                                        td= val.contract
                                        td= new Date(val.date)
                                        td= countDays(new Date(val.date) - new Date())
                                        td= val.description
                                        td
                                            a(href="https://poocoin.app/tokens/"+val.contract, target="_blank", style="margin-right: 5px;")= "PooCoin"
                                            br
                                            a(href="https://bscscan.com/token/"+val.contract, target="_blank", style="margin-right: 5px;")= "BSCScan"
                                        td= "-"
                                else
                                    tr
                                        td= val.name
                                        td= val.contract
                                        td= new Date(val.date)
                                        td= countDays(new Date(val.date) - new Date())
                                        td= val.description
                                        td
                                            a(href="https://poocoin.app/tokens/"+val.contract, target="_blank", style="margin-right: 5px;")= "PooCoin"
                                            br
                                            a(href="https://bscscan.com/token/"+val.contract, target="_blank", style="margin-right: 5px;")= "BSCScan"
                                        td= "-"
                div(class="col-1")