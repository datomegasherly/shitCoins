html
    head
        title= "List"
        link(rel="stylesheet", href="/css/bootstrap.min.css")
        script(src="/js/bootstrap.bundle.min.js")
        script(src="/js/updateTime.js")
    body
        div(class="container", style="margin-top:10px;")
            div(class="row")
                div(class="col-12", style="text-align: center")
                    a(href="/create", style="font-size: 14pt;font-weight: bold",)= "Create"
            div(class="row", style="margin-top: 8px; margin-bottom: 8px")
                div(class="col-3", style="text-align: center")
                div(class="col-6 row", style="text-align: center;border-radius: 5px; border: 1px solid;padding: 5px")
                    div(class="col-9")
                        input(class="form-control", name="search", placeholder="Search...")
                    div(class="col-3", style="text-align: center")
                        button(class="btn btn-warning search_button")= "Search"
                    if(search)
                        div(class="col-12", style="text-align: center")
                            p= "Search for: " + search
                div(class="col-3", style="text-align: center")
        div(class="container-fluid", style="margin-top:10px;")
            div(class="row")
                div(class="col-12")
                    table(class="table table-striped table-hover")
                        thead
                            tr
                                th= "Name | Description"
                                th= "Contract"
                                th= "End Sell Date | Launch Date | To End Sell Date"
                                th= "links"
                                th= "operation"
                        tbody
                            each val, key in data
                                if new Date(val.date) - new Date() < 0
                                    tr(class="table-danger", style="color: gray")
                                        td
                                            p
                                                div(style="display: flex")
                                                    div
                                                        if(getImage(val.contract))
                                                            img(src=getImage(val.contract), style="width: 30px;height: 30px;margin-right: 3px")
                                                    div= val.name
                                            p=val.description
                                        td= val.contract
                                        td
                                            p=new Date(val.date)
                                            if(val.launchdate  && val.launchdate !== '')
                                                p=new Date(val.launchdate)
                                            else
                                                p="No Launch Date"
                                            p=countDays(new Date(val.date) - new Date())
                                        td
                                            a(href=val.link, target="_blank", style="margin-right: 5px;")= "WebSite"
                                            br
                                            a(href="https://poocoin.app/tokens/"+val.contract, target="_blank", style="margin-right: 5px;")= "PooCoin"
                                            br
                                            a(href="https://bscscan.com/token/"+val.contract, target="_blank", style="margin-right: 5px;")= "BSCScan"
                                        td
                                            p
                                                button(class="btn btn-danger delete-btn", id=val._id)= "Delete"
                                            p
                                                button(class="btn btn-warning edit-btn", id=val.contract)= "Edit"
                                else if new Date(val.date) - new Date() <= 86400000
                                    tr(class="table-warning", style="color: green;font-weight: bold")
                                        td
                                            p
                                                div(style="display: flex")
                                                    div
                                                        if(getImage(val.contract))
                                                            img(src=getImage(val.contract), style="width: 30px;height: 30px;margin-right: 3px")
                                                    div= val.name
                                            p=val.description
                                        td= val.contract
                                        td
                                            p=new Date(val.date)
                                            if(val.launchdate  && val.launchdate !== '')
                                                p=new Date(val.launchdate)
                                            else
                                                p="No Launch Date"
                                            p=countDays(new Date(val.date) - new Date())
                                        td
                                            a(href=val.link, target="_blank", style="margin-right: 5px;")= "WebSite"
                                            br
                                            a(href="https://poocoin.app/tokens/"+val.contract, target="_blank", style="margin-right: 5px;")= "PooCoin"
                                            br
                                            a(href="https://bscscan.com/token/"+val.contract, target="_blank", style="margin-right: 5px;")= "BSCScan"
                                        td
                                            button(class="btn btn-warning edit-btn", id=val.contract)= "Edit"
                                else
                                    tr
                                        td
                                            p
                                                div(style="display: flex")
                                                    div
                                                        if(getImage(val.contract))
                                                            img(src=getImage(val.contract), style="width: 30px;height: 30px;margin-right: 3px")
                                                    div= val.name
                                            p=val.description
                                        td= val.contract
                                        td
                                            p=new Date(val.date)
                                            if(val.launchdate  && val.launchdate !== '')
                                                p=new Date(val.launchdate)
                                            else
                                                p="No Launch Date"
                                            p=countDays(new Date(val.date) - new Date())
                                        td
                                            a(href=val.link, target="_blank", style="margin-right: 5px;")= "WebSite"
                                            br
                                            a(href="https://poocoin.app/tokens/"+val.contract, target="_blank", style="margin-right: 5px;")= "PooCoin"
                                            br
                                            a(href="https://bscscan.com/token/"+val.contract, target="_blank", style="margin-right: 5px;")= "BSCScan"
                                        td
                                            button(class="btn btn-warning edit-btn", id=val.contract)= "Edit"
